{
    "login": {
      "type": "object",
      "properties": {
        "email": { "type": "string", "format": "email" },
        "password": { "type": "string" }
      },
      "required": ["email", "password"],
      "additionalProperties": false
    },


    "register": {
      "type": "object",
      "properties": {
        "first_name": { "type": "string" },
        "last_name": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "password": { "type": "string" },
        "phone": { "type": "string" },
        "user_type": { "type": "string" },
        "business_name": { "type": "string" },
        "business_type": { "type": "string" }
      },
      "required": ["first_name", "last_name", "email", "phone", "password", "user_type", "business_name", "business_type"],
      "additionalProperties": false
    },

    
    "forgetPassword": {
      "type": "object",
      "properties": {
        "email": { "type": "string", "format": "email" }
      },
      "required": ["email"],
      "additionalProperties": false
    },


    "verifyEmail": {
      "type": "object",
      "properties": {
        "email": { "type": "string", "format": "email" },
        "otp": { "type": "string" }
      },
      "required": ["otp", "email"],
      "additionalProperties": false
    },


    "resetPassword": {
      "type": "object",
      "properties": {
        "email": { "type": "string", "format": "email" },
        "password": { "type": "string" }
      },
      "required": ["email", "password"],
      "additionalProperties": false
    },
    
    
    "changePassword": {
      "type": "object",
      "properties": {
        "oldPassword": { "type": "string" },
        "newPassword": { "type": "string" }
      },
      "required": ["oldPassword", "newPassword"],
      "additionalProperties": false
    },





  

    "addEvent": {
      "type": "object",
      "properties": {
          "name": { "type": "string" },
          "type": { "type": "string" },
          "location": { "type": "string" },
          "start_date": { "type": "string" },
          "end_date": { "type": "string" },
          "start_time": { "type": "string" },
          "end_time": { "type": "string" },
          "event_details": { "type": "string" },
          "links": { "type": "Array" },
          "sponsor_products": { "type": "Array" },
          "organizer": { "type": "object" },

          "sponsor_products_images": { "type": "string" },
          "organizer_images": { "type": "Array" }
        },
      "required": ["name", "type", "location", "start_date", "end_date", "start_time", "end_time", "event_details", "links", "sponsor_products", "organizer", "sponsor_products_images", "organizer_images"],
      "additionalProperties": false
    },


    "editProduct": {
      "type": "object",
      "properties": {
          "name": { "type": "string" },
          "type": { "type": "string" },
          "location": { "type": "string" },
          "start_date": { "type": "string" },
          "end_date": { "type": "string" },
          "start_time": { "type": "string" },
          "end_time": { "type": "string" },
          "event_details": { "type": "string" },
          "links": { "type": "Array" },
          "sponsor_products": { "type": "Array" },
          "organizer": { "type": "object" }
      },
      "required": ["eventId"],
      "additionalProperties": false
    },

    
    "deleteProduct": {
      "type": "object",
      "properties": {
        "eventId": { "type": "string" }
      },
      "required": ["eventId"],
      "additionalProperties": false
    },
  
    



    
    "addQuery": {
      "type": "object",
      "properties": {
          "full_name": { "type": "string" },
          "email": { "type": "string" },
          "message": { "type": "string" }
      },
      "required": ["full_name", "email", "message"],
      "additionalProperties": false
    },
  

    "deleteQuery": {
      "type": "object",
      "properties": {
          "id": { "type": "string" }
      },
      "required": ["id"],
      "additionalProperties": false
    }

}
  